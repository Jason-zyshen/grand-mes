# - Create a product or material
mutation CreateMaterial {
  CreateMaterial(data: { name: "largeTable" }) {
    id
    name
  }
}

# - List all the materials
query ListMaterial {
  Material {
    id
    name
  }
}

# - Create a BOM with certain amount of materials
mutation CreateBOM {
  createBOM(
    productName: "table"
    BOMName: "tableBOM"
    bomDetail: [{ name: "leg", amount: 4 }, { name: "board", amount: 1 }]
  ) {
    id
    name
    USES_MATERIAL_rel {
      amount
      Material {
        id
        name
      }
    }
  }
}

# - List all the BOMs
query ListBOM {
  BOM {
    id
    name
    USES_MATERIAL_rel {
      Material {
        id
        name
      }
      amount
    }
    crafts {
      id
      name
      materials {
        id
        name
      }
    }
  }
}

# - Create a procedure
mutation CreateProcedure {
  CreateProcedure(data: { name: "p0" }) {
    id
    name
  }
}

# - List procedures
query ListProcedure {
  Procedure {
    id
    name
  }
}

# - Create a craft with procedures and BOM
mutation CreateCraft {
  createCraft(
    productName: "table"
    craftName: "makeTable"
    craftDetail: [
      { name: "assembly", next: "paint" }
      { name: "paint", next: "quality" }
      { name: "quality" }
    ]
  ) {
    id
    name
    has_procedure {
      name
    }
  }
}


# - Link a BOM to a procedure

# - List the craft and BOM of a product
query CraftAndBOMOfProduct {
  Material(filter: { name: "table" }) {
    id
    name
    has_craft {
      id
      name
      uses_bom {
        id
        name
        USES_MATERIAL_rel {
          amount
          Material {
            id
            name
          }
        }
      }
      first_procedure {
        name
      }
      last_procedure {
        name
      }
    }
  }
}

